{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./core",
    "baseUrl": "./core",
    "strict": true,
    "lib": ["esnext", "ES2017", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["core/**/*.ts", "index.d.ts", "core/types/index.d.ts"],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "node_modules",
    "dist",
    "js-tests",
    "docs",
    "tests"
  ]
}
